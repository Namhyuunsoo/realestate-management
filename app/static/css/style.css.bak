  background:#fff3cd;           /* 연한 노랑 */
  transition: background .25s;
}
.listing-item.blink{
  animation: blinkFade 0.8s ease-out 1;
}

.marker-dot.blink {
  animation: blinkFade 0.8s ease-in-out !important;
  box-shadow: 0 0 15px currentColor !important;
}
@keyframes blinkFade{
  0%{ background:#fff176; }
  100%{ background:transparent; }
}

