  border-top:1px solid #ddd;
}
.or-line span{
  position: relative;
  background:#fff;
  padding:0 8px;
  color:#999;
  font-size: 12px;
}
.email-label{
  display:block;
  text-align:left;
  font-size:13px;
  margin-bottom:6px;
  color:#444;
}
.email-input{
  width:100%;
  height:40px;
  padding:0 10px;
  border:1px solid #ccc;
  border-radius:4px;
  margin-bottom:10px;
  font-size:14px;
}
.email-apply-btn{
  width:100%;
  height:40px;
  border:none;
  border-radius:4px;
  background:#333;
  color:#fff;
  font-size:14px;
