  overflow: hidden;           /* 내부에서만 스크롤 */
}

/* 2) 레이블은 고정 높이(내용 높이) */
#listingSidebarWrap > label {
  flex: 0 0 auto;             /* 크기 고정, 늘어나거나 줄어들지 않음 */
  margin: 0 !important;       /* 불필요한 마진 제거 */
  padding: 4px 12px;          /* 필요 시 조정 */
  background: #f0f0f0;        /* 식별용 배경색 (원하면 제거) */
